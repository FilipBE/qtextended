    "type" => "bool",
    "set" => [ "%", "Enable DBUS support." ],
    "unset" => [ "no-%", "Disable DBUS support." ],
    "visible" => $qtopia_visref,
    "autodep" => $qtopia_autoref,
    "config_pri" => [ "CONFIG+=enable_dbus", ],
